			<scope>provided</scope>
				<exclusions>
			        <exclusion>
			            <groupId>org.apache.httpcomponents</groupId>
			            <artifactId>httpcore</artifactId>
			        </exclusion>
	        	</exclusions>
		</dependency>
		
		 <!-- Hadoop Dependency -->
